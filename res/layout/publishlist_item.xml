<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/publish_image"
        android:layout_width="60dip"
        android:layout_height="60dip"
        android:layout_gravity="center"
        android:layout_margin="7dip"
        android:src="@drawable/z_zhao" />

    <View
        android:layout_width="1dip"
        android:layout_height="40dip"
        android:layout_gravity="center"
        android:layout_margin="5dip"
        android:background="@color/hs" />

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.2"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/publish_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="庙里"
                android:textSize="15dip" />

            <TextView
                android:id="@+id/publish_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dip"
                android:text="09-22" />
        </RelativeLayout>

        <TextView
            android:id="@+id/publish_shi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2室1厅"
            android:textColor="@color/hs"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/publish_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="建筑面积25m"
            android:textColor="@color/hs"
            android:textSize="12dip" />

        <TextView
            android:id="@+id/publish_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="600元/月"
            android:textColor="@color/hs"
            android:textSize="12dip" />
    </LinearLayout>

    <!--
    <View
        android:layout_width="1dip"
        android:layout_height="40dip"
        android:layout_gravity="center"
        android:layout_margin="5dip"
        android:background="@color/hs" />

    <ImageView
        
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="0.05"
        android:src="@drawable/btn_click_right_end" />
    -->

</LinearLayout>