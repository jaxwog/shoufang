<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/details_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        layout="@layout/titlebar" />

    <ImageView
        android:id="@+id/userimage"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_margin="10dip"
        android:src="@drawable/tx" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1sp"
        android:background="@color/hs" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="changename"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/detail_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="昵称:"
                    android:textSize="20dip" />

                <TextView
                    android:id="@+id/detailtext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/detail_1"
                    android:text="会飞的猪"
                    android:textColor="@color/hs"
                    android:textSize="20dip" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/backto_1" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1sp"
                android:background="@color/hs" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="changesex"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/detail_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="性别:"
                    android:textSize="20dip" />

                <TextView
                    android:id="@+id/detailtext_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/detail_2"
                    android:text="男"
                    android:textColor="@color/hs"
                    android:textSize="20dip" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/backto_1" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1sp"
                android:background="@color/hs" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="changeage"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/detail_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="年龄:"
                    android:textSize="20dip" />

                <TextView
                    android:id="@+id/detailtext_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/detail_3"
                    android:text="20岁"
                    android:textColor="@color/hs"
                    android:textSize="20dip" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/backto_1" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1sp"
                android:background="@color/hs" />

            <RelativeLayout
                android:id="@+id/userdetail_phone"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/detail_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="手机认证:"
                    android:textSize="20dip" />

                <TextView
                    android:id="@+id/detailtext_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/detail_4"
                    android:text="15038219"
                    android:textColor="@color/hs"
                    android:textSize="20dip" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/backto_1" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1sp"
                android:background="@color/hs" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/detail_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="邮箱验证:"
                    android:textSize="20dip" />

                <TextView
                    android:id="@+id/detailtext_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/detail_5"
                    android:text="120555218@qq.com"
                    android:textColor="@color/hs"
                    android:textSize="20dip" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/backto_1" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1sp"
                android:background="@color/hs" />

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:onClick="changeangle"
                android:padding="10dip" >

                <TextView
                    android:id="@+id/detail_6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="个性签名:"
                    android:textSize="20dip" />

                <TextView
                    android:id="@+id/detailtext_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/detail_6"
                    android:text="会飞的猪"
                    android:textColor="@color/hs"
                    android:textSize="20dip" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/backto_1" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="1sp"
                android:background="@color/hs" />

            <Button
                android:id="@+id/takeout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dip"
                android:background="@color/orange"
                android:text="退出"
                android:textColor="@color/white"
                android:textSize="20dip" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>